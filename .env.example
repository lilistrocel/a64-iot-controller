# A64 IoT Controller Configuration
# Copy this file to .env and customize

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here

# =============================================================================
# Dashboard
# =============================================================================
DASHBOARD_PORT=8080
DASHBOARD_USER=admin
DASHBOARD_PASSWORD=change-this-password

# =============================================================================
# Database
# =============================================================================
DATABASE_PATH=data/controller.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600
DB_RETENTION_DAYS=30

# =============================================================================
# Default Gateway (can add more via API)
# =============================================================================
DEFAULT_GATEWAY_IP=192.168.1.201
DEFAULT_GATEWAY_PORT=4196

# =============================================================================
# Polling & Timeouts
# =============================================================================
SENSOR_POLL_INTERVAL=10
MODBUS_TIMEOUT=3.0
GATEWAY_RECONNECT_INTERVAL=30

# =============================================================================
# Robustness
# =============================================================================
WATCHDOG_ENABLED=true
WATCHDOG_TIMEOUT=60
STARTUP_DELAY=10
RECOVER_RELAY_STATES=true
SCHEDULE_CATCHUP=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/controller.log
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=3

# =============================================================================
# A64Core Sync (optional)
# =============================================================================
A64CORE_URL=
A64CORE_API_KEY=
SYNC_ENABLED=false
